{
  "name": "cra-template",
  "version": "1.0.0",
  "scripts": {
    "build": "react-scripts build",
    "start": "react-scripts start",
    "test": "react-scripts test --colors",
    "coverage": "react-scripts test --coverage",
    "precommit": "lint-staged",
    "postinstall": "$(yarn bin)/pm2 install typescript"
  },
  "lint-staged": {
    "src/{**/*,*}/*.{ts,tsx}": [
      "cross-env CI=true react-scripts test --colors --findRelatedTests"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts?(x)",
      "!**/*.d.ts?(x)",
      "!**/*.stories.ts?(x)",
      "!**/__*__/**"
    ]
  },
  "browserslist": {
    "production": [
      "chrome > 60",
      "firefox > 60",
      "safari > 12"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@anchor-protocol/anchor.js": "^3.0.1",
    "@terra-money/terra.js": "^3.0.1",
    "@terra-money/wallet-provider": "^3.6.0",
    "axios": "^0.24.0",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "dotenv": "^10.0.0",
    "pm2": "^5.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "styled-components": "^5.3.3",
    "ts-node": "^10.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.15.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "cross-env": "^7.0.3",
    "lint-staged": "^11.2.6",
    "react-scripts": "4.0.3",
    "typescript": "^4.4.4"
  }
}
